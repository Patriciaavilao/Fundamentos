#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main()
{
	int opcion;
	float a,b,r;
	do {
		cout<<"\tmenu"<<endl;
		cout<<"1. suma"<<endl;
		cout<<"2. resta"<<endl;
		cout<<"3. producto"<<endl;
		cout<<"4. division"<<endl;
		cout<<"0. salir"<<endl;
		cout<<"elige una opcion:";
		cin>>opcion;
		if ((opcion>=1)&&(opcion<=4)){
	    cout<<"ingrese a:";
	    cin>>a;
		cout<<"ingrese b:";
		cin>>b;
		}
	switch (opcion) {
	case 1: r=a+b; break;
	case 2: r=a-b; break;
	case 3: r=a*b; break;
	case 4: r=a/b; break;
	case 0: cout<< "salir"; break;
	default: cout<<"opcion invalida"<<endl;
	cout<<"el resultado es:"<<r<< endl;
	while (opcion !=0);
	}
	getch();
}
