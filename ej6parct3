#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
	float X,S;
	int n,I;
	cout<<"ingrese un numero";
	cin>>X;
	while (X!=-999){
		
		cout<<"ingrese su potencia final";
		cin>>n;
		S=0;
		for (I=1;I<=n;I++){
			S=S+pow(X,I);
			cout<<"+"<<pow(X,I);
		}
		cout<<endl;
		cout<<"la serie es:"<<S<<endl;
		cout<<"ingrese un numero";
		cin>>X;
	}
getch ();
}
